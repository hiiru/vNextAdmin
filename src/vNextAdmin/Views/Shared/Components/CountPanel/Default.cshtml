@model vNextAdminLib.Components.Dashboard.CountPanel
<div class="col-lg-3 col-md-6">
    <div class="panel panel-@Model.ColorCss">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-@Model.IconCss fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">@Model.Count</div>
                    <div>@Model.Message</div>
                </div>
            </div>
        </div>
        <a href="@Model.LinkTarget">
            <div class="panel-footer">
                <span class="pull-left">@Model.LinkText</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>